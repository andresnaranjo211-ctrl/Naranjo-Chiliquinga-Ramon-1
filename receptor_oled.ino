MCP_CAN CAN(CAN_CS);

// LEDs
const int LED_SOUND = 8;
const int LED_VIB   = 9;

void setup() {
  Serial.begin(115200);

  pinMode(LED_SOUND, OUTPUT);
  pinMode(LED_VIB, OUTPUT);

  display.begin(SSD1306_SWITCHCAPVCC, OLED_ADDR);
  display.clearDisplay();
  display.setTextColor(SSD1306_WHITE);

  while (CAN_OK != CAN.begin(MCP_ANY, CAN_250KBPS, MCP_8MHZ)) {
    Serial.println("Error iniciando CAN...");
    delay(500);
  }

  CAN.setMode(MCP_NORMAL);

  Serial.println("Receptor CAN iniciado correctamente");
}

void loop() {

  unsigned long rxId;
  unsigned char len = 0;
  unsigned char buf[8];

  if (CAN_MSGAVAIL == CAN.checkReceive()) {

    CAN.readMsgBuf(&rxId, &len, buf);  // â† ESTA ES LA FORMA CORRECTA

    if (rxId == 0x100 && len >= 2) {

      bool soundState = buf[0];
      bool vibState   = buf[1];

      digitalWrite(LED_SOUND, soundState ? HIGH : LOW);
      digitalWrite(LED_VIB, !vibState ? HIGH : LOW);
      delay (50);

      Serial.print("Recibido -> Sonido: ");
      Serial.print(soundState);
      Serial.print(" | Vibracion: ");
      Serial.println(vibState);

      if (soundState ==LOW && vibState == HIGH){
        display.clearDisplay(); 
  display.setTextSize(3);
  display.setTextColor(WHITE);
  display.setCursor(5,0);
  display.println("Normal");
  display.display();
      }
      else if (soundState ==HIGH && vibState == HIGH){

        display.clearDisplay(); 
  display.setTextSize(1);
  display.setTextColor(WHITE);
  display.setCursor(18,0);
  display.println("Sonido fuerte");
